FROM php:8.2-cli

# Cài đặt các gói hệ thống cần thiết và tiện ích mở rộng PHP
RUN apt-get update && \
    apt-get install -y libzip-dev unzip git curl && \
    rm -rf /var/lib/apt/lists/* && \
    docker-php-ext-install pdo_mysql zip

# Cài đặt Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Đặt thư mục làm việc
WORKDIR /var/www/html

# Sao chép tệp ứng dụng
COPY . /var/www/html

# Cài đặt phụ thuộc PHP
RUN composer install --no-dev --optimize-autoloader

# Tạo khóa ứng dụng
RUN php artisan key:generate

# Đặt quyền thích hợp
RUN chown -R www-data:www-data /var/www/html

# Đợi cơ sở dữ liệu đã sẵn sàng
RUN echo "<?php \
    \$max_tries = 30; \
    \$tries = 0; \
    while (\$tries < \$max_tries) { \
        try { \
            new PDO('mysql:host=db;port=3306;dbname=summarease', 'root', ''); \
            echo \"Database connection successful\n\"; \
            exit(0); \
        } catch (Exception \$e) { \
            echo \"Waiting for database... (\$tries/\$max_tries)\n\"; \
            sleep(1); \
            \$tries++; \
        } \
    } \
    echo \"Could not connect to database\n\"; \
    exit(1); \
?>" > /tmp/wait-for-db.php

# Đợi NLP service sẵn sàng
RUN echo "<?php \
    \$max_tries = 30; \
    \$tries = 0; \
    while (\$tries < \$max_tries) { \
        \$ch = curl_init(); \
        curl_setopt(\$ch, CURLOPT_URL, 'http://backend-nlp:5001/health'); \
        curl_setopt(\$ch, CURLOPT_POST, true); \
        curl_setopt(\$ch, CURLOPT_RETURNTRANSFER, true); \
        curl_setopt(\$ch, CURLOPT_TIMEOUT, 5); \
        \$response = curl_exec(\$ch); \
        \$http_code = curl_getinfo(\$ch, CURLINFO_HTTP_CODE); \
        curl_close(\$ch); \
        \
        if (\$http_code == 200) { \
            echo \"NLP service is ready\n\"; \
            exit(0); \
        } \
        \
        echo \"Waiting for NLP service... (\$tries/\$max_tries)\n\"; \
        sleep(1); \
        \$tries++; \
    } \
    echo \"NLP service is not available\n\"; \
    exit(1); \
?>" > /tmp/wait-for-nlp.php

# Cổng để truy cập web
EXPOSE 8000

# Bắt đầu ứng dụng
CMD ["sh", "-c", "php /tmp/wait-for-db.php && php /tmp/wait-for-nlp.php && php artisan serve --host=0.0.0.0 --port=8000"]